name: Update TRMNL JSON (manual seed)
on:
  workflow_dispatch: {}   

jobs:
  update:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - uses: actions/checkout@v4
      - name: Ensure docs exists and seed JSON
        run: |
          mkdir -p docs
          echo '{}' > docs/data.json
      - name: Commit seed JSON
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add docs/data.json
          git commit -m "Seed data.json" || echo "No changes to commit"
          git push
